        <name>yarn.resourcemanager.resource-tracker.address.rm14210</name>
        <value>rm14210.hadoop.harbinger2.data.m.com:8031</value>
    </property>
    <property>
        <name>yarn.resourcemanager.address.rm14210</name>
        <value>rm14210.hadoop.harbinger2.data.m.com:8032</value>
    </property>
    <property>
        <name>yarn.resourcemanager.admin.address.rm14210</name>
        <value>rm14210.hadoop.harbinger2.data.m.com:8033</value>
    </property>
    <property>
        <name>yarn.resourcemanager.webapp.address.rm14210</name>
        <value>rm14210.hadoop.harbinger2.data.m.com:8088</value>
    </property>

    <!-- ================ ResourceManager (rm14211) Address Configuration ================ -->
    <property>
        <name>yarn.resourcemanager.hostname.rm14211</name>
        <value>rm14211.hadoop.harbinger2.data.m.com</value>
    </property>
    <property>
        <name>yarn.resourcemanager.scheduler.address.rm14211</name>
        <value>rm14211.hadoop.harbinger2.data.m.com:8030</value>
    </property>
    <property>
        <name>yarn.resourcemanager.resource-tracker.address.rm14211</name>
