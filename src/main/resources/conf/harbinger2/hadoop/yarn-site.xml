<configuration>
    <property>
        <name>yarn.resourcemanager.cluster-id</name>
        <value>harbinger2</value>
    </property>

    <!-- ================ HA Configuration ================ -->
    <property>
        <name>yarn.resourcemanager.ha.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>yarn.resourcemanager.ha.automatic-failover.enabled</name>
        <value>true</value>
    </property>
    <property>
        <name>yarn.resourcemanager.ha.rm-ids</name>
        <value>rm14210,rm14211</value>
    </property>

    <!-- ================ ResourceManager (rm14210) Address Configuration ================ -->
    <property>
        <name>yarn.resourcemanager.hostname.rm14210</name>
        <value>rm14210.hadoop.harbinger2.data.m.com</value>
    </property>
